<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/main.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= match.name %></h1>
  <section>
    <div>Company: <%= match.company %></div>
    <div>Event: <%= match.event %></div>
    <div>Release Year: <%= match.eventYear %></div>
    <div>Wrestlers:
      <ul>
        <% match.wrestlers.forEach(wrestler => { %>
          <li><%= wrestler.name %></li>
        <% }) %>
      </ul>
    </div>
  </section>
  <section>
    <form id="add-wrestler-to-match" 
      action="/matches/<%= match._id %>/wrestlers" method="POST">
        <select name="wrestlerId">
          <% wrestlers.forEach(function(wrestler) { %>
            <option><%= wrestler.name %></option>
          <% }) %>
        </select><br>
        <button type="submit">Add to Match</button>
    </form>
    <form action="/matches/<%= match._id %>/edit"
        method="GET">
      <button class="btn" type="submit">Edit Match</button>
    </form>
    <div>
      <form action="/matches/<%= match._id %>?_method=DELETE" method="POST">
      <button>Delete Match</button>
    </form>
    </div>
    </section>
</main>




<%- include('../partials/footer') %>