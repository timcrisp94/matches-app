<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/main.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= match.name %></h1>
  <section>
    <div>Company: </div>
    <div><%= match.company %></div>
    <div>Event: </div>
    <div><%= match.event %></div>
    <div>Release Year: </div>
    <div><%= match.eventYear %></div>
    <div>Wrestlers: </div>
    <div><%= match.wrestlers.join(', ') %></div>
    <div>
      <form action="/matches/<%= match._id %>/edit"
        method="GET">
      <button class="btn" type="submit">Edit Match</button>
    </form>
    <div>
      <form action="/matches/<%= match._id %>?_method=DELETE" method="POST">
      <button>Delete Match</button>
    </form>

    </div>
    </section>
</main>




<%- include('../partials/footer') %>