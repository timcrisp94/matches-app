<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>

<% matches.forEach((match, idx) => { %>
  <% if (match.owner.equals(profile._id)) { %>
    <table>
     <tbody>
          <tr>
            <td><%= match.bout %></td>
            <td><%= match.company %></td>
            <td><%= match.event %></td>
            <td><%= match.year %> </td>
            <td><a href="/matches/<%= match._id %>">
              details</a>
            </td>
          </tr>
        </tbody>
    </table>
<% } %>
<% }) %>

</main>

<%- include('../partials/footer') %>